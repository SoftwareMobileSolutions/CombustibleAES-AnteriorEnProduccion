    var user = new { timezone = -6 };
}
      
@(Html.Kendo()
      .DatePicker()
      .Name("fechasimple7")
      .Format("yyyy/MM/dd")
      .Value(DateTime.Now.AddHours(user.timezone))
      .Max(DateTime.Now.AddHours(user.timezone))
      .Min("1900/01/01")
