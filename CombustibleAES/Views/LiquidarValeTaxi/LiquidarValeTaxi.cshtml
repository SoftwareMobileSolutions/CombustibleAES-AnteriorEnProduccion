                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-lg-2">
                                            <label class="control-label">Empresa:</label>
                                        </div>
                                        <div class="col-lg-4">
                                            @EmpresaList()
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-lg-2">
                                            <label class="control-label"></label>
                                        </div>
                                        <div class="col-lg-4">
                                            <input type="text" id="txtHacia2" class="txtTab k-textbox marginFivePx" placeholder="Destino 2 (Opcional)" />
                                        </div>
                                    </div>

